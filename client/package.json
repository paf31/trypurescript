{
  "name": "trypurescript-client",
  "private": true,
  "config": {
    "configpath": "config/dev/*.purs"
  },
  "scripts": {
    "clean": "rimraf output",
    "test": "spago test --path ./config/dev/Try.Config.purs",
    "build:dev": "spago build --path ./config/dev/Try.Config.purs",
    "build:prod": "spago bundle-app --path $npm_package_config_configpath --purs-args '--censor-lib --strict' --to public/js/index.js"
  },
  "devDependencies": {
    "purescript": "^0.13.6",
    "purescript-psa": "^0.7.3",
    "rimraf": "^2.5.4",
    "spago": "^0.14.0"
  }
}
